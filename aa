#include <iostream>
#include <string>
using namespace std;

struct Player {
  string username;
  int age;
  int numscore;
  int *scores;

  Player() {
      numScores = 0;
      scores = nullptr;
 }

~player (){
   delete[] scores;
   scores = nullptr;
  }
};

void inputPlayer(Player* P) {
   cout << "Eneter Player's username: ";
   getline(cin, p->username);

   cout << "Enter Player's Age: ";
   cin >> p->age; 

   cout << "Enter player's age: ";
   cin >> p-> age;
 
   cout <<"How many scores do you want to enter for " << p->username << "?";
   cin >> p-> numscores;
   cin.ignore();

   p->scores = new int[p->numscores];

   for (int i = 0; i < p ->numscores; i++) {
     cout << " > Enter Scores of #" << i+ 1 << ": ";
     cin >> p-> scores[i};
   }
   cin.ignore();
}

