#include <iostream>
#include <string>
using namespace std;

struct Player {
  string username;
  int age;
  int numscore;
  int *scores;

  Player() {
      numScores = 0;
      scores = nullptr;
 }

~player (){
   delete[] scores;
   scores = nullptr;
  }
};

void inputPlayer(Player* P) {
   cout << "Enter Player's username: ";
   getline(cin, p->username);

   cout << "Enter Player's Age: ";
   cin >> p->age; 

   cout << "Enter player's age: ";
   cin >> p-> age;
 
   cout <<"How many goals do you want to enter for " << p->username << "?";
   cin >> p-> numscores;
   cin.ignore();

   p->scores = new int[p->numscores];

   for (int i = 0; i < p ->numscores; i++) {
     cout << " > Enter goals of #" << i+ 1 << ": ";
     cin >> p-> scores[i};
   }
   cin.ignore();
}

void displayPlayer(player* P) {
   cout << "\n--- Player infor ---\n";
   cout << "Username: " << p->username << endl;
   cout << "Age: " << p->age << endl;
   cout << "Scores: ";
   for (int i = 0; i <p->numsScores; i++) {
       cout << p-> scores [i];
       if (i < p->numScores - 1) cout << ", ";
   }
   cout << endl;
}

int main () {
   int numPlayers;

   cout<< "How many players do you want to check? ";
   cin >> numPlayers;
   cin.ignore();

  Player* players = new Player [numPlayers];

 for (int i = 0; i < numPlayers; i++) {
     cout << "\nEntering goals for Player #" << in +1 << ":\n";
     inputPlayer(&players[i]);
  }

     cout << "\n=========== Display All Players =========== \n";
      for (int i = 0; i < numPlayers; i ++) {
        displayPlayers(&players[i]);
  }

   delete[] players;

   return 0;
}

